                        <Insets bottom="8.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="customerPhoneNumber">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="18.0" />
                    </VBox.margin></TextField>
                <ComboBox fx:id="customerCountry" onAction="#customerCountryDropdown" prefWidth="150.0">
                    <VBox.margin>
                        <Insets bottom="22.0" />
                    </VBox.margin></ComboBox>
                <ComboBox fx:id="customerDivision" onAction="#customerDivisionDropdown" prefWidth="150.0">
                    <VBox.margin>
                        <Insets />
                    </VBox.margin></ComboBox>
