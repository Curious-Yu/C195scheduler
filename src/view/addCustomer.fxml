                <Label text="Postal Code :">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin></Label>
                <Label text="Phone Number :">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin></Label>
                <Label text="Country :">
                    <font>
                        <Font size="18.0" />
