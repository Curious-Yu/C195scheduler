                <TextField fx:id="customerID" disable="true">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="6.0" top="13.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="customerFirstName">
                    <font>
                        <Font size="18.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="8.0" top="2.0" />
                    </VBox.margin></TextField>
                <TextField fx:id="customerLastName" layoutX="10.0" layoutY="70.0">
                    <font>
                        <Font size="18.0" />
